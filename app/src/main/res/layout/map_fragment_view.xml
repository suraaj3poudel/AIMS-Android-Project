<?xml version="1.0" encoding="utf-8"?>


<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/naviCtrlButton"
        android:textColor="@color/white"
        android:layout_gravity="bottom|center"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:layout_marginBottom="100dp"
        android:elevation="4dp"
        android:gravity="center"
        android:translationZ="5dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Start Navigation"
        />



    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/recenter"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:fabCustomSize="60dp"
            android:layout_marginRight="15dp"
            android:elevation="4dp"
            android:layout_marginBottom="200dp"
            android:backgroundTint="@android:color/darker_gray"
            android:src="@drawable/center"
            app:maxImageSize="35dp"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mode"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            app:elevation="5dp"
            app:fabCustomSize="60dp"
            android:layout_marginBottom="400dp"
            android:backgroundTint="@android:color/darker_gray"
            android:src="@drawable/ic_baseline_nights_stay_24"
            app:maxImageSize="35dp"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/voiceCtrlButton"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:fabCustomSize="60dp"
            android:layout_marginRight="15dp"
            android:elevation="4dp"
            android:layout_marginBottom="300dp"
            android:backgroundTint="@android:color/darker_gray"
            android:src="@drawable/ic_baseline_language_24"
            app:maxImageSize="35dp"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/highway"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:fabCustomSize="60dp"
            android:layout_marginRight="15dp"
            android:elevation="4dp"
            android:visibility="invisible"
            android:layout_marginBottom="490dp"
            android:backgroundTint="@android:color/darker_gray"
            android:src="@drawable/ic_baseline_edit_road_24"
            app:maxImageSize="35dp"

            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/stop"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:fabCustomSize="60dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:elevation="4dp"
            android:layout_marginBottom="100dp"
            android:backgroundTint="@android:color/darker_gray"
            android:src="@drawable/ic_baseline_cancel_24"
            app:maxImageSize="35dp"

            />


        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal"
            android:elevation="5dp"

            android:background="#C1C1C1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/whereto"
                    android:layout_height="match_parent"
                    android:text="Navigating to"
                    android:visibility="visible"
                    android:background="@color/green"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/topMap"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/direction_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:elevation="2dp"
                    android:maxWidth="50dp"
                    android:layout_marginLeft="15dp"

                    android:maxHeight="50dp"
                    android:adjustViewBounds="true"
                    android:textColor="@color/black"
                    android:translationZ="@dimen/cardview_default_elevation" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:id="@+id/direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="2dp"
                        android:text="Redirecting ..."
                        android:textSize="30dp"
                        android:layout_marginTop="3dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:translationZ="@dimen/cardview_default_elevation" />
                    <TextView
                        android:id="@+id/street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="2dp"
                        android:padding="5dp"
                        android:text="Waiting for GPS .. "
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:translationZ="@dimen/cardview_default_elevation" />

                </LinearLayout>


            </LinearLayout>

            </LinearLayout>
        </FrameLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:foregroundGravity="center_horizontal"
            android:elevation="5dp"
            android:visibility="gone"
            android:layout_gravity="bottom"
            android:background="#C1C1C1"
            android:id="@+id/bottomMap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="94dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="2dp"
                        android:src="@drawable/ic_baseline_expand_more_24"
                        android:text="Speed"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:translationZ="@dimen/cardview_default_elevation" />

                    <TextView
                        android:id="@+id/speed"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:text="--"
                        android:textSize="35dp"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="94dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="2dp"
                        android:src="@drawable/ic_baseline_expand_more_24"
                        android:text="Arrival"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:translationZ="@dimen/cardview_default_elevation" />

                    <TextView
                        android:id="@+id/arrival_time"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:text="--:--"
                        android:textSize="35dp"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView

                        android:layout_width="94dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="2dp"
                        android:src="@drawable/ic_baseline_expand_more_24"
                        android:text="Distance"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:translationZ="@dimen/cardview_default_elevation" />

                    <TextView
                        android:id="@+id/ETA"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:text="--"
                        android:textSize="35dp"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <fragment
            android:id="@+id/mapfragment"
            class="com.here.android.mpa.mapping.AndroidXMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </fragment>
    </FrameLayout>
</FrameLayout>